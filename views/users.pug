  // Sarah links
#wrapper
  .overlay
  // sidebar
  nav#sidebar-wrapper.fixed-top.align-top(role='navigation')
    .simplebar-content(style='padding: 0px;')
      a.sidebar-brand(href='#')
        img(src='img/youxi logo.svg')
        img(src='img/adminpanel.svg')
      ul.navbar-nav.align-self-stretch
        li
          a.nav-link.text-left(role='button')
            i.fas.fa-tachometer-alt
            |                             Dashboard
        li.has-sub
          a.nav-link.collapsed.text-left(href='#collapseExample1' role='button' data-toggle='collapse')
            i.far.fa-user-circle
            |  Users
          #collapseExample1.collapse.menu.mega-dropdown
            .dropmenu(aria-labelledby='navbarDropdown')
              .container-fluid
                .row
                  .col-lg-12.px-2
                    .submenu-box
                      ul.list-unstyled.m-0
                        li
                          a(href='') user1
                        li
                          a(href='') user2
                        li
                          a(href='') user3
        li.has-sub
          a.nav-link.collapsed.text-left.active(href='#collapseExample2' role='button' data-toggle='collapse')
            i.fab.fa-product-hunt
            |  Products
          #collapseExample2.collapse.menu.mega-dropdown
            .dropmenu(aria-labelledby='navbarDropdown')
              .container-fluid
                .row
                  .col-lg-12.px-2
                    .submenu-box
                      ul.list-unstyled.m-0
                        li
                          a(href='') Product1
                        li
                          a(href='') Product2
                        li
                          a(href='') Product3
        li.has-sub
          a.nav-link.collapsed.text-left(href='#collapseExample3' role='button' data-toggle='collapse')
            i.fab.fa-delicious
            |  Categories
          #collapseExample3.collapse.menu.mega-dropdown
            .dropmenu(aria-labelledby='navbarDropdown')
              .container-fluid
                .row
                  .col-lg-12.px-2
                    .submenu-box
                      ul.list-unstyled.m-0
                        li
                          a(href='') Categorie1
                        li
                          a(href='') Categorie2
                        li
                          a(href='') Categorie3
  // sidebar-end
  // Page Content
  #page-content-wrapper
    #content
      .container-fluid.p-0.px-lg-0.px-md-0
        // Topbar
        nav.navbar.navbar-expand.navbar-light.my-navbar
          // Sidebar Toggle (Topbar)
          #bar.nav-icon1.hamburger.animated.fadeInLeft.is-closed(type='button' data-toggle='offcanvas')
            span
            span
            span
          ul.navbar-nav.ml-auto
            // Topbar Search
            .search-box
              form
                input(type='text' placeholder='Search ...')
                i.fas.fa-search
            // User Information
            li.nav-item.dropdown
              a#userDropdown.nav-link(href='#' role='button' data-toggle='dropdown')
                span.UserName= user.FirstName
                img.img-profile(src='img/youxi logo.svg')
                i.fas.fa-chevron-down.btn.fas-topbar
              // Dropdown - User Information
              .dropdown-menu(aria-labelledby='userDropdown')
                a.dropdown-item(href='#')
                  i.fas.fa-user.fa-sm.fa-fw.mr-2.text-gray-400
                  |                                         Profile
                a.dropdown-item(href='#')
                  i.fas.fa-cogs.fa-sm.fa-fw.mr-2.text-gray-400
                  |                                         Settings
                a.dropdown-item(href='#')
                  i.fas.fa-list.fa-sm.fa-fw.mr-2.text-gray-400
                  |                                         Activity Log
                .dropdown-divider
                a.dropdown-item(href="/api/v1/users/logout")
                  i.fas.fa-sign-out-alt.fa-sm.fa-fw.mr-2.text-gray-400
                  |                                         Logout
        // end of topbar
        // Begin Page Content
        .container-fluid.px-lg-4.table-container
          .col-md-12.mt-4
            .card
              .card-body
                // title
                .row.header-table
                  .col-2.my-auto.product-st.justify-content-around
                    | Users

                  .col-7.my-auto.justify-content-start
                    form
                      input(type='text' placeholder='Search ...')
                      i.fas.fa-search.btn
                  .col-1.my-auto.justify-content-around
                    i.fas.fa-chevron-up.btn
                  .col-1.my-auto.justify-content-around
                    i.fas.fa-chevron-down.btn
                // title
              .table-responsive
                table.table.v-middle.table-striped.table-borderless.table-hover
                  thead
                    tr.bg-light
                      th.border-top-0
                      th.border-top-0 First Name
                      th.border-top-0 Last Name
                      th.border-top-0 Email
                      th.border-top-0 Active

                  tbody
                    each x in users
                      tr
                      td
                        .d-flex.align-items-center
                          .m-r-10
                            a.btn.btn-circle.btn-st
                      td=x.FirstName
                      td=x.LastName
                      td=x.email
                      td
                        if x.active
                          input.toggleUser.toggle(type='checkbox' _id=`${x._id}` checked="checked")
                        else 
                          input.toggleUser.toggle(type='checkbox' _id=`${x._id}`)

              // Modal Modify
              #exampleModalModify.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                    .modal-dialog.modal-lg
                      .modal-content.text-white.d
                        .container-fluid.px-5.py-3
                          .modal-header.border-0
                            h1#exampleModalLabel.modal-title.txt
                              | MODIFY 
                              | PRODUCT
                            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                          .modal-body
                            .mb-3.row
                              label.col-sm-2.txt.col-form-label(for='name') Name*
                              .col-sm-10
                                input#pName.form-control.form-control-lg.rounded-pill.border-white.text-white.inp(type='text' placeholder='   Product Name')
                            .mb-3.row
                              label.txt.col-sm-2.col-form-label(for='Price') Price*
                              .col-sm-10
                                input#pPrice.form-control.form-control-lg.inp.rounded-pill.border-white.text-white(type='number' placeholder='   Product Price')
                            .mb-3.row
                              label.txt.col-sm-2.col-form-label(for='Quantity') Quantity
                              .col-sm-10
                                input#pQuantity.inp.form-control.form-control-lg.rounded-pill.border-white.text-white(type='text' placeholder='   Product Quantity')
                            .mb-3.row
                              label.txt.col-sm-2.col-form-label.px-2(for='Description')
                                | Description*
                              .col-sm-10
                                textarea#pDescription.inp.form-control.form-control-lg.border-white.text-white(type='text' placeholder='   Product Descrption' rows='3')
                          .modal-footer.border-0
                            button.btn.rounded-pill.inp.btn1(type='button' data-bs-dismiss='modal') Cancel
                            button#patchBtn.btn.rounded-pill.inp.btn1.btn2(type='submit')
                              | Confirm
              // Modal Modify END
        footer.footer
          .container-fluid
            .row.text-muted
              .col-6.text-left
                p.mb-0
                  a.text-muted(href='Product.html')
                    strong Dashboard Youxi 
                  |                                         &copy;
              .col-6.text-right
                ul.list-inline
                  li.footer-item
                    a.text-muted(href='#') Support
                  li.footer-item
                    a.text-muted(href='#') Help Center
                  li.footer-item
                    a.text-muted(href='#') Privacy
                  li.footer-item
                    a.text-muted(href='#') Terms
