.container
  .row
    .col-md-2
    .col-md-8.cart-detail
      .title
        | Your shopping cart
      svg(height='80' width='60')
        g(fill='none' stroke='black')
          path(stroke-width='6' d='M5 10 l215 0')
      each product in products
        .row.main
          .col-md-11
            .row.item
              .col-md-2.my-auto
                img.product-image.img-fluid.rounded-circle(src=product.imageCover)
              .col-md-4.my-auto
                a.product-name #{product.name}
                a.product-price.text-muted  #{product.price} Da / Unit
              .col-md-1.my-auto.item-number  #{cart.totalQty} 
              .col-md-1.my-auto
                a(href=`/api/v1/cart/add-to-cart/${product.id}`)
                  i.fas.fa-plus-circle
                a(href='#')
                  i.fas.fa-minus-circle
              .col-md-4.my-auto.product-total-price  #{cart.totalCost} DA 
          .col-md-1.my-auto
            a(href='')
              i.fas.fa-times
      
      .row.main.d-flex.justify-content-center.border-bottom.border-top
        .col-md-3
        .col-md-3(style='font-family: Montserrat;\
        font-style: normal;\
        font-weight: bold;\
        font-size: 25px;\
        line-height: 44px;\
        color: #202020;\
        ')
          | Order Total :
          svg(height='20' width='40')
            g(fill='none' stroke='black')
              path(stroke-width='6' d='M1 0 l215 0')
        .col-md-3
          a.total-price  #{cart.totalCost} DA
          svg(height='30' width='170')
            text(x='5' y='12' fill='grey') + shipping free
        .col-md-3
      .row.justify-content-between
        .col
          i.fas.fa-long-arrow-alt-left(href='/')
          a.text-decoration-none(style='\
          font-family: Montserrat;\
