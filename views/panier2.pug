<div class="container">
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 cart-detail">
          <div class="title">Your shopping cart</div>
          <svg height="20" width="60">
            <g fill="none" stroke="black">
              <path stroke-width="6" d="M5 10 l215 0" />
            </g>
          </svg>
          if(products.length==0)
            img(src="/img/undraw_empty_cart_co35.svg", alt="empty cart")
          else
            each item in products
              .row.main
                .col-md-11
                  .row.item
                    .col-md-2.my-auto
                      img.product-image.img-fluid.rounded-circle(src=item.imageCover)
                    .col-md-4.my-auto
                      a.product-name #{item.name} 
                      a.product-price.text-muted #{item.price} / Unit
                    .col-md-1.my-auto.item-number #{item.qty}
                    .col-md-1.my-auto
                      i.fas.fa-plus-circle( _id=`${item._id}` type="button")
                      i.fas.fa-minus-circle( _id=`${item._id}` type="button")
                    .col-md-4.my-auto.product-total-price #{item.price*item.qty} DA
                .col-md-1.my-auto
                  i.fas.fa-times( _id=`${item._id}` type="button")


            // end of detailed products-------------------------------------------------
            <div class="row main d-flex justify-content-center border-bottom border-top">
              <div class="col-md-3"></div>
              <div class="col-md-3" style=" font-family: Montserrat;font-style: normal;font-weight: bold;font-size: 25px;line-height: 44px;color: #202020;">Order Total :
                <svg height="20" width="40">
                  <g fill="none" stroke="black">
                    <path stroke-width="6" d="M1 0 l215 0" />
                  </g>
                </svg>
              </div>
              <div class="col-md-3">
                <a class="total-price"> #{cart.totalCost} Da</a>
                <svg height="30" width="170">
                  <text x="5" y="12" fill="grey">+ shipping free</text>
                </svg>
              </div>
              <div class="col-md-3"></div>
            </div>

            <div class="row justify-content-between">
              <div class="col">
                <i class="fas fa-long-arrow-alt-left" href="#"></i>
                <a href="/" class="text-decoration-none" style=" font-family: Montserrat; font-style: normal; font-size: 20px; line-height: 44px; color: #000; " >Back to shop</a>
              </div>
              <div class="col-2">
                <button type="button" class="btn btn-dark buttonCheckout" data-bs-toggle="modal" data-bs-target="#checkoutModal">Check out</button>
              </div>
            </div>
        </div>
        <div class="col-md-2"></div>
      </div>
</div>
    <div class="modal fade" id="checkoutModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content text-white">
          <div class="container-fluid px-5 py-3">
            <div class="modal-header border-0">
              <h1 class="modal-title txt" id="exampleModalLabel">Checkout</h1>
              <svg class="title-divider" height="10" width="60">
                <g fill="none" stroke="black">
                  <path stroke-width="6" d="M20 5 l215 0" />
                </g>
              </svg>
            </div>

            <div class="modal-body">
              <div class="card">
                <div class="form-group1">
                  <label for="email" class="form-label1">Shipping address</label>
                  <svg class="email-divider" height="10" width="20">
                    <g fill="none" stroke="black">
                      <path stroke-width="4" d="M1 0 l215 0" />
                    </g>
                  </svg>
                  <input class="form-content" id="address" placeholder="Your address" />
                </div>
                <div class="form-group2">
                  <label for="phone" class="form-label1">Mobile number</label>
                  <svg class="mobile-divider" height="10" width="20">
                    <g fill="none" stroke="black">
                      <path stroke-width="4" d="M1 0 l215 0" />
                    </g>
                  </svg>
                  <input type="tel" class="form-content" id="phone" placeholder="Your mobile number" />
                </div>
              </div>
              <div class="modal-footer border-0">
                <button type="button" class="btn inp btn1 border-dark" data-bs-dismiss="modal" >Cancel
                </button>
                <button id="confirmCheckout" type="button" class="btn inp btn2">Confirm</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
