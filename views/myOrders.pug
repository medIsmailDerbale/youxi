// qty
<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 cart-detail">
      <div class="title">My Orders</div>
      <svg height="20" width="60">
        <g fill="none" stroke="black">
          <path stroke-width="6" d="M5 10 l215 0" />
        </g>
      </svg>
      // orders 
      <div class="col-md-8 m-auto">
        if (orders!=null && orders.length>0)
          each order in orders
            <div class="border rounded">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Ordered on : #{order.createdAt.toUTCString()}</h5>
                  <p class="card-text">
                    <ul class="list-group">
                      each item in order.items
                        <li class="list-group-item d-flex justify-content-between align-items-center"><a href='/p/#{item.productId}'>#{item.title} | #{item.qty} Units</a>
                          <span class="icon-button__badge2">#{item.price} Da</span>
                        </li>
                    </ul>
                  </p>
                </div>
                <div class="card-footer border justify-content-between align-items-center d-flex">
                  <strong>Order Status : #{order.status}</strong>
                  <strong>Total Price: #{order.cart.totalCost} Da</strong>
                </div>
              </div> 
            </div>
            <br/>
        else
          <h3 class="text-center" >You have not made any orders yet</h3>
      </div>
      // end of detailed products-------------------------------------------------
</div>
</div>
</div>

