.container
  .card.py-3.px-5.my-5.mx-auto
    h1.text-white.mb-4 SIGN UP
    form
      .row.justify-content-center
        .col-6
          label.form-label(for='exampleInputEmail1') First name
          .input-group.input-group-sm.border.mb-3.form-control-lg
            input#firstName.form-control.text-white.border-0(type='text' aria-label='Sizing example input' aria-describedby='inputGroup-sizing-sm' required)
        .col-6
          label.form-label(for='exampleInputEmail1') Last name
          .input-group.input-group-sm.border.mb-3.form-control-lg
            input#lastName.form-control.text-white.border-0(type='text' aria-label='Sizing example input' aria-describedby='inputGroup-sizing-sm' required)
      label.form-label(for='exampleInputEmail1') Email
      .input-group.input-group-sm.border.mb-3.form-control-lg
        input#email.form-control.text-white.border-0(type='email' aria-label='Sizing example input' aria-describedby='inputGroup-sizing-sm' required)
      label.form-label(for='exampleInputEmail1' minlength="8") Password
      .input-group.input-group-sm.border.mb-3.form-control-lg
        input#password.form-control.text-white.border-0(type='password' aria-label='Sizing example input' aria-describedby='inputGroup-sizing-sm' required)
      label.form-label(for='exampleInputEmail1' minlength="8") Confirm Password
      .input-group.input-group-sm.border.mb-3.form-control-lg
        input#confirmPassword.form-control.text-white.border-0(type='password' aria-label='Sizing example input' aria-describedby='inputGroup-sizing-sm' required)
      .modal-footer.border-0
        button.btn.inp.btn1.cancelBtn(type='button' data-bs-dismiss='modal')
          | CANCEL
        button#submitBtn.btn.inp.btn1.btn2(type='button') SUBMIT
script(src='https://unpkg.com/vue/dist/vue.js')
