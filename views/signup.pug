head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title= title 
  link(rel='icon' href='img/youxi logo.svg')
  link(rel='stylesheet' href='css/signup.css')
  link(rel='stylesheet' href='css/alert.css')
